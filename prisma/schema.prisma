// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Role{
  id Int @default(autoincrement()) @id
  name String @unique
  users User[]
}

model User{
  id Int @default(autoincrement()) @id
  email String @unique
  password String
  surname String 
  name String
  phone String? @unique
  course Int?
  group Int?
  role Role @relation(fields: [roleId], references: [id]) 
  roleId Int
  olympics Olympics[]
}

model Olympics{
  id Int @default(autoincrement()) @id
  creator User @relation(fields: [creatorId], references: [id])
  creatorId Int
  name String
  startTime DateTime
  endTime DateTime
  description String?
  databaseScript String
  image String?
  tasks Task[]
}

model Task{
  id Int @default(autoincrement()) @id
  olympics Olympics @relation(fields: [olympicsId], references: [id])
  olympicsId Int
  title String
  solution String
  image String?
}
